<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<?import java.net.URL?>
<BorderPane id="rootPane" fx:id="rootPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.itss.group11.itss.controller.LoginController">
    <stylesheets>
        <URL value="@login.css" />
    </stylesheets>
    <center>
        <AnchorPane id="loginPane" fx:id="loginPane" minWidth="1000" minHeight="700" prefWidth="400" prefHeight="300" layoutX="0" layoutY="0">
            <children>
                <Label id="titleLabel" text="Đăng nhập" />
                <Label id="usernameLabel"  text="Tên đăng nhập" />
                <TextField fx:id="usernameField"  />
                <Label id="passwordLabel" text="Mật khẩu" />
                <PasswordField fx:id="passwordField"  />
                <Button id="loginButton" onAction="#handleLogin" text="Đăng nhập" />
            </children>
        </AnchorPane>
    </center>
</BorderPane>